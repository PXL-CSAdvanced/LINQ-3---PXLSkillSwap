<Window x:Class="LINQ_3___PXLSkillSwap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LINQ_3___PXLSkillSwap"
        mc:Ignorable="d" Title="PXL Skill Swap" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid Margin="20" Name="DgdSkillSwap">

        </DataGrid>
        <Image Grid.Column="1" Grid.RowSpan="2" Source="images/pxlskillswap.png" Margin="5"></Image>
        <WrapPanel Grid.Row="1" Margin="20">
            <Button Name="ShowWorkshopsButton" Click="ShowWorkshopsButton_Click" Margin="10">Show Workshops</Button>
            <Button Name="ShowCategoriesButton" Click="ShowCategoriesButton_Click" Margin="10">Show Categories</Button>
            <Button Name="ShowMusicButton" Click="ShowMusicButton_Click" Margin="10">Show Music Workshops</Button>
            <Button Name="ShowPast14Button" Click="ShowPast14Button_Click" Margin="10">Show Workshops Past 14:00</Button>
            <Button Name="ShowBuildingAButton" Click="ShowBuildingAButton_Click" Margin="10">Show Building A</Button>
            <Button Name="ShowDronesButton" Click="ShowDronesButton_Click" Margin="10">Show Drones</Button>
            <Button Name="ShowListOfWorkshopNamesButton" Click="ShowListOfWorkshopNamesButton_Click" Margin="10">Show Only Workshop Names</Button>
            <Button Name="ShowListOfWorkshopNamesAndCategoryNamesButton" Click="ShowListOfWorkshopNamesAndCategoryNamesButton_Click" Margin="10">Show Only Workshop Names With Category</Button>

        </WrapPanel>
    </Grid>
</Window>